{
  "extends": "next/core-web-vitals",
  "plugins": ["import"],
  "rules": {
    "no-console": "warn",
    "camelcase": "warn",
    "import/order": [
      "warn",
      {
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "newlines-between": "always",
        "groups": ["builtin", "external", "parent", "sibling", "index"],
        "pathGroups": [
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          }
        ],
        "pathGroupsExcludedImportTypes": ["builtin"]
      }
    ]
  },
  "ignorePatterns": ["next.config.js", "node_modules/"]
}
